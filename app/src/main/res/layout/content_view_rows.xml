<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/thumbView"
        android:src="@drawable/ic_number1"
        android:paddingRight="3dp"
        android:paddingLeft="3dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/thumbView"
        android:text="Participant Name"
        android:id="@+id/title"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:textColor="#000"
        android:paddingRight="5dp"
        android:paddingLeft="5dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#000"
        android:layout_below="@id/title"
        android:text="Opened time"
        android:layout_toRightOf="@id/thumbView"
        android:paddingRight="5dp"
        android:paddingBottom="5dp"

        android:paddingLeft="5dp"
        android:id="@+id/lastSeenDateTime"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:id="@+id/noOfViews"
        android:paddingTop="5dp"
        android:paddingRight="5dp"
        android:paddingLeft="5dp"
        android:paddingBottom="5dp"
        android:text="20 Views"
        android:textColor="#000"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="10 Participant"
        android:layout_alignParentEnd="true"
        android:id="@+id/noOfParticipants"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"

        android:paddingBottom="5dp"
        android:textColor="#000"
        android:layout_below="@+id/noOfViews"/>

</RelativeLayout>